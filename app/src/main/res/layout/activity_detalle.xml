<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itsco.edu.miagenda.Detalle">

    <TextView
        android:text="Nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="47dp"
        android:id="@+id/lblnombre"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/txtnombre"
        android:layout_below="@+id/lblnombre"
        android:layout_alignStart="@+id/lblnombre" />

    <TextView
        android:text="Movil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/lblmovil"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/txtnombre"
        android:layout_alignStart="@+id/txtnombre" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblmovil"
        android:layout_alignStart="@+id/lblmovil"
        android:layout_marginTop="20dp"
        android:id="@+id/txtmovil"
        android:onClick="onClick" />

    <TextView
        android:text="Casa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/lblcasa"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/txtmovil"
        android:layout_alignStart="@+id/txtmovil" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/lblnombre"
        android:id="@+id/txtcasa"
        android:onClick="onClick" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/txtcasa"
        android:layout_alignEnd="@+id/lblmovil" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/txtemail"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

</RelativeLayout>
